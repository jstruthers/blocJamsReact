.song-item
  position relative
  display flex
  justify-content center
  align-items center
  height 3rem
  border-bottom 1px solid rgba(255, 255, 255, 0.5)

  &:hover 
    cursor pointer
    background-color rgba(210, 40, 123, 0.4)
  
  &-title
    width 85%

  &-icon, &-duration
    display flex
    justify-content center
    align-items center
    margin 0 10px
    width 30px

  &-button
    display flex
    justify-content center
    align-items center
    width 30px
    height 30px

    font-size 1.5em
    background-color white
    color rgb(210, 40, 123)
    border-radius 50% 50%
  